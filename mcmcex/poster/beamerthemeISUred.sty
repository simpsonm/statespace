\setbeamercolor{headline}{fg=white,bg=DarkRed}
\setbeamercolor{footline}{fg=black, bg=gray}
\setbeamerfont{footline}{size=\large,series=\tt}
\setbeamercolor{separation line}{bg=Gold}
\setbeamercolor{title in headline}{fg=Gold}
\setbeamercolor{subtitle in headline}{fg=Gold}
\setbeamercolor{author in headline}{fg=White}
\setbeamercolor{institute in headline}{fg=White}
\setbeamercolor{date in headline}{fg=Gold}

\setbeamercolor{framesubtitle}{fg=DarkRed, bg=DarkSlateGrey}
\setbeamercolor{author in head/foot}{fg=White, bg=DarkRed}
\setbeamercolor{title in head/foot}{fg=White, bg=DarkRed}

\setbeamercolor*{normal text}{fg=Black, bg=DarkSlateGrey!40}
\setbeamercolor*{block body}{bg=DarkSlateGrey,fg=white}
\setbeamercolor*{block title}{fg=Gold,bg=DarkRed}
\setbeamerfont{block title}{series=\bf}
\setbeamerfont{block blockbody}{size=\scriptsize}
\setbeamercolor{upper separation line head}{fg=DarkRed}


\setbeamercolor{structure}{fg=DarkRed}

\setbeamertemplate{itemize items}[triangle]
\setbeamertemplate{navigation symbols}{}  % no navigation on a poster

%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%
\setbeamertemplate{block begin}{
  \vskip.75ex
  \begin{beamercolorbox}[ht=4ex,dp=0.5ex,center,leftskip=-1em,colsep*=.75ex]{block title}%
    \usebeamerfont*{block title}%
    {\phantom{Gg}\insertblocktitle}% phantom because of baseline problem
  \end{beamercolorbox}%
  {\ifbeamercolorempty[bg]{block body}{}{\nointerlineskip\vskip-0.5pt}}%
  \usebeamerfont{block body}%
  \begin{beamercolorbox}[leftskip=1em,colsep*=.75ex,sep=0.5ex,vmode]{block body}%
    \ifbeamercolorempty[bg]{block body}{\vskip-.25ex}{\vskip-.75ex}\vbox{}%
  }
  \setbeamertemplate{block end}{
  \end{beamercolorbox}
}

%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%
\setbeamertemplate{headline}{  
  \leavevmode

  \begin{beamercolorbox}[wd=\paperwidth]{headline}
    \begin{columns}[T]
      \begin{column}{.02\paperwidth}
      \end{column}
      \begin{column}{.75\paperwidth}
        \vskip4ex
        \raggedleft
        \usebeamercolor{title in headline}{\color{fg}\textbf{\Huge{\inserttitle}}\\[1ex]}
        \usebeamercolor{subtitle in headline}{\color{fg}\textit{\large{\insertsubtitle}}\\[2ex]}
        \usebeamercolor{author in headline}{\color{fg}\large{\insertauthor}\\[1ex]}
        \usebeamercolor{institute in headline}{\color{fg}\large{\insertinstitute}\\[1ex]}     
      \end{column}
      \begin{column}{.2\paperwidth}
        \vskip15ex
        \raggedleft
        \usebeamercolor{date in headline}{\color{fg}{\normalsize{\insertdate}}\\[1ex]}
        \vskip6ex
      \end{column}
      \begin{column}{.02\paperwidth}
      \end{column}
    \end{columns}
    \vskip2ex
  \end{beamercolorbox}

  \begin{beamercolorbox}[wd=\paperwidth]{lower separation line head}
    \rule{0pt}{3pt}
  \end{beamercolorbox}
}

